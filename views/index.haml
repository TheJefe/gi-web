%h2 The QA List
%table{:border => '1'}
  %thead
    %tr
      %th Id
      %th Description
      %th Assignee
  %tbody
  - @items.each do |item|
    %tr
      %td= item['number']
      %td= item['title']
      %td
        - if item['assignee']
          %img{ src: item['assignee']['avatar_url'], height: 20, width: 20 }= item['assignee']['login']
